{
    "name": "microweber/microweber",
    "type": "application",
    "description": "New generation of CMS with drag and drop",
    "repositories": [
        {
            "type": "composer",
            "url": "http://packages.microweber.com/"
        },
        {
            "type": "package",
            "package": {
                "name": "microweber/microweber",
                "version": "dev",
                "source": {
                    "url": "https://github.com/microweber/microweber/archive/dev.zip",
                    "type": "zip"
                }
            }
        }
    ],


    "require": {
        "php": ">=5.3.2",

        "components/jquery": "1.9.*",
        "components/jqueryui": "*",
        "components/rangy": "*",

        "components/bootstrap3": "dev-master",
        "components/bootstrap-default": "dev-master",
        "components/bootstrap": "dev-master",
        "zeroclipboard/zeroclipboard": "dev-master",


        "pimple/pimple": "*",
        "guzzlehttp/guzzle": "~4.0"

    },
    "autoload": {
        "psr-0": {
            "Microweber": "src/"
        }
    },


    "config": {
        "preferred-install": "dist"
    },
    "keywords": ["cms", "drag and drop", "shop", "blog"],
    "homepage": "http://microweber.com",
    "license": "Apache-2.0",
    "support": {
        "email": "support@microweber.com",
        "irc": "irc://irc.freenode.org/microweber"
    },
    "authors": [
        {
            "name": "Peter Ivanov",
            "email": "peter@microweber.com",
            "role": "Developer"
        },
        {
            "name": "Boris Sokolov",
            "email": "boris@microweber.com",
            "role": "Designer"
        },
        {
            "name": "Alexander Raykov",
            "email": "alex@microweber.com",
            "role": "Developer"
        }
    ]
}